<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sage"
    tools:context=".Controller.MainActivity">

    <ImageView
        android:id="@+id/smiley_happy_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/smiley_happy"
        app:srcCompat="@mipmap/smiley_happy" />

    <ImageButton
        android:id="@+id/history_imageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/ic_history_black"
        app:srcCompat="@mipmap/ic_history_black" />

    <ImageButton
        android:id="@+id/add_note_imageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/ic_note_add_black"
        app:srcCompat="@mipmap/ic_note_add_black" />


</RelativeLayout>
